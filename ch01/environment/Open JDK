# https://adoptium.net/
# Latest LTS Release (24.0.1)

# user home directory
$ touch .bash_profile

# after open -e ~/.bash_profile
export JAVA_HOME=/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home
export PATH=${PATH}:$JAVA_HOME/bin

# apply ~/.bash_profile content
$ source ~/.bash_profile

# check environment variable is applied correctly
$ javac -version
# javac 24.0.1
